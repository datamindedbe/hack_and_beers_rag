{
  "name": "Python Poetry Project",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter@2025.5.0",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.languageServer": "Pylance",
        "editor.formatOnSave": true,
        "python.formatting.provider": "black"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/poetry:2": {}
  },
  "postCreateCommand": "poetry config virtualenvs.in-project true && poetry install --no-root && poetry run pip install jupyter ipykernel",
  "postAttachCommand": "poetry run jupyter notebook --ip=0.0.0.0 --port=8888 --no-browser --allow-root",
  "forwardPorts": [
    8888
  ]
}